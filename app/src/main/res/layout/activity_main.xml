<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mertogurcu.jsonisleme.MainActivity">

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:text="Konumunuz alınıyor..."
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif"
        android:text="Yakınınızdaki Mekanlar :"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mekaniGorbilgi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textView"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp"
        android:text="Mekanı Görmek İçin İsmine Dokunun"
        android:textColor="@android:color/darker_gray" />


    <ListView
        android:id="@+id/lvname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mekaniGorbilgi"
        android:paddingTop="5dp"></ListView>


</RelativeLayout>

